BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            on_text: app.handle_conversion()
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_increment(1)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)
#    Button:
#        text: "convert miles to km"
#       on_press: app.handle_conversion()
    Label:
        id: output_label
        text: app.output_km
        color: (1, 1, 0, 1)

